<!DOCTYPE html>
<html lang="{{ locale }}" dir="{{ direction }}" class="{{ checkout_html_classes }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, height=device-height, minimum-scale=1.0, user-scalable=0">
    <meta name="referrer" content="origin">

    <title>{{ page_title }}</title>

    {{ content_for_header }}

    {{ checkout_stylesheets }}
    {{ checkout_scripts }}
  </head>
  <body>
    {{ skip_to_content_link }}

    <header class="banner" data-header role="banner">
      <div class="wrap">
        {{ content_for_logo }}
      </div>
    </header>

    {{ order_summary_toggle }}

    <div class="content" data-content>
      <div class="wrap">
        <div class="main">
          <header class="main__header" role="banner">
            {{ content_for_logo }}
            {{ breadcrumb }}
            {{ alternative_payment_methods }}
          </header>
          <main class="main__content" role="main">
            {% comment %} Custom Code {% endcomment %}
            {%- if page_title contains 'Information' -%}
              {%- capture order_note_html -%}
                <div class="order-note">
                  <div class="fieldset">
                    <div class="field field--optional">
                      <div class="field__input-wrapper">
                        <label class="field__label field__label--visible" for="delivery-note">{{- 'checkout.delivery_note' | t -}}</label>

                        <textarea placeholder="Delivery note" name="checkout[attributes][{{- 'checkout.delivery_note' | t | escape -}}]" autocorrect="off" class="field__input" id="delivery-note"></textarea>
                      </div>
                    </div>
                  </div><!-- /.fieldset -->
                </div><!-- /.order-note -->
                <div class="section hidden-if-js" data-delivery-pickup-info>
              {%- endcapture -%}

              {%- assign content_for_layout = content_for_layout | replace_first: '<div class="section hidden-if-js" data-delivery-pickup-info>', order_note_html -%}
            {%- endif -%}

            {{ content_for_layout }}
          </main>
          <footer class="main__footer" role="contentinfo">
            {{ content_for_footer }}
          </footer>
        </div>
        <aside class="sidebar" role="complementary">
          <div class="sidebar__header">
            {{ content_for_logo }}
          </div>
          <div class="sidebar__content">
            {{ content_for_order_summary }}
          </div>
        </aside>
      </div>
    </div>

    {{ tracking_code }}

    {%- style -%}
      .hidden-if-js + .order-note { display: none; }

      .order-note .fieldset { margin-top: 0; }
      .order-note .field { float: none; }
      .order-note textarea { height: 120px; resize: none; }
    {%- endstyle -%}
  </body>
</html>
