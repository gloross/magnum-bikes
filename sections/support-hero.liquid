                        <li>
                        <a href="">
                          <h4>Magnum Bike Voyager</h4>
                          <span>Magnum Support > Categories > Touring > Models</span>
                        </a>
                      </li>
                    </ul>
                </div>
            </div>
            <div class="support-hero__image">
                <div class="media-wrapper">
                  {%- render 'img',
                  img: object.image,
                  img_sm: '',
                  img_md: '',
                  img_lg: '',
                  m_width: '500'
                -%}
                </div>
            </div>
        </div>
    </div>
</section>
{% schema %}
  {
  "name": "Support Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Title",
      "default": "How Can We Help?"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description text",
      "default": "Use the super powerful search bar you see below."
    }
  ],
  "presets": [
    {
      "name": "Support Hero"
    }
  ]
}  
{% endschema %}
