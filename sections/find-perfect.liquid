  "label": "Tagline",
  "default": "Not sure this one is right for You?"
},
{
  "type": "image_picker",
  "id": "image",
  "label": "Image"
},
{
  "type": "text",
  "id": "cta_text",
  "label": "CTA text",
  "default": "Help Me Choose"
},
{
  "type": "text",
  "id": "cta_url",
  "label": "CTA URL"
}
],
"presets": [
  {
    "name": "Find Perfect"
  }
]
}  
{% endschema %}
